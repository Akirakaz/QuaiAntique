{% set menuLinks = [
    {
        'label': 'Dashboard',
        'routeName': 'app_admin_index',
        'relatedRoutes': ['app_admin_index']
    },
    {
        'label': 'Accueil du site',
        'routeName': 'app_home',
        'relatedRoutes': []
    },
    {
        'label': 'Gestion de la galerie',
        'routeName': 'app_admin_gallery_index',
        'relatedRoutes': ['app_admin_gallery_index', 'app_admin_gallery_new', 'app_admin_gallery_edit']
    },
    {
        'label': 'Gestion des plats',
        'routeName': 'app_admin_meal_index',
        'relatedRoutes': ['app_admin_meal_index', 'app_admin_meal_new', 'app_admin_meal_edit']
    },
    {
        'label': 'Gestion des menus',
        'routeName': 'app_admin_menu_index',
        'relatedRoutes': ['app_admin_menu_index', 'app_admin_menu_new', 'app_admin_menu_edit']
    },
    {
        'label': 'Gestion des formules',
        'routeName': 'app_admin_formula_index',
        'relatedRoutes': ['app_admin_formula_index', 'app_admin_formula_new', 'app_admin_formula_edit']
    },
    {
        'label': 'Gestion des jours d\'ouverture',
        'routeName': 'app_admin_opening_index',
        'relatedRoutes': ['app_admin_opening_index', 'app_admin_opening_new', 'app_admin_opening_edit']
    },
    {
        'label': 'Gestion des r√©servations',
        'routeName': 'app_admin_index',
        'relatedRoutes': []
    },
] %}
<header class="fixed right-0 left-0 z-20 bg-slate-200 shadow-md shadow-slate-400/50 transition" x-data="{mainMenu: false}">
    <div class="mx-auto max-w-7xl">
        <div class="bg-slate-200/95 px-6 xl:ml-[300px]">
            <div class="flex h-16 justify-between">
                <button class="z-50 cursor-pointer text-4xl text-white lg:hidden" @click="mainMenu = !mainMenu">
                  <span class="flex rounded-md stroke-slate-900 p-2 transition hover:bg-slate-300">
                      <svg viewBox="0 0 24 24" stroke-width="2.3" class="h-6 w-6">
                          <path x-show="!mainMenu" stroke-linecap="round" stroke-linejoin="round" d="M8.25 6.75h12M8.25 12h12m-12 5.25h12M3.75 6.75h.007v.008H3.75V6.75zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0zM3.75 12h.007v.008H3.75V12zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0zm-.375 5.25h.007v.008H3.75v-.008zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z"/>
                          <path x-show="mainMenu" stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
                      </svg>
                  </span>
                </button>

                <div class="flex items-center justify-center lg:w-full lg:px-0">
                    <a href="{{ path('app_home') }}" class="hidden lg:flex">
                        <img class="h-12 w-full" src="{{ asset('assets/img/logo.svg') }}" alt="Logo Quai Antique">
                    </a>
                </div>

                <div class="flex flex-1 items-center justify-center px-2 sm:inset-0">
                    <a href="{{ path('app_home') }}" class="lg:hidden">
                        <img class="h-12 w-full" src="{{ asset('assets/img/logo.svg') }}" alt="Logo Quai Antique">
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="fixed top-16 bottom-0 overflow-y-scroll bg-slate-300/95 opacity-0 shadow-slate-400/50 transition-all duration-300 translate-x-[-300px] lg:opacity-100 lg:translate-x-0 w-[300px] shadow-r-md"
         :class="{'!translate-x-0 !opacity-100': mainMenu}"
    >
        <nav class="px-2 [&>*]:text-slate-800 [&>*]:mt-3 [&>*]:block [&>*]:cursor-pointer [&>*]:border-l-4
                    [&>*]:transition [&>*]:duration-300 [&>*]:p-2.5 hover:[&>*]:border-l-slate-400 first-of-type:[&>*]:font-bold
"
             x-data="{menuDropdown: false}">
            {% for link in menuLinks %}
                <a href="{{ path(link.routeName) }}" class="{{ isMenuActive(link.relatedRoutes, 'border-l-slate-500', 'border-l-transparent') }}">
                    <span class="ml-2">{{ link.label }}</span>
                </a>
            {% endfor %}
        </nav>
    </div>
</header>
