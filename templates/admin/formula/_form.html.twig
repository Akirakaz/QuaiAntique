<div class="w-full md:w-1/2 mx-auto">
    {{ form_start(form) }}
    <div class="flex flex-col gap-8">
        <div class="w-full flex flex-col gap-2">
            {{ form_label(form.title) }}
            {{ form_widget(form.title, {'attr': {'class': 'rounded border-slate-300'}}) }}
            {{ form_errors(form.title) }}
        </div>

        <div class="w-full flex flex-col gap-2">
            {{ form_label(form.description) }}
            {{ form_widget(form.description, {'attr': {'class': 'rounded border-slate-300'}}) }}
            {{ form_errors(form.description) }}
        </div>

        <div>
            <div class="w-full flex flex-wrap sm:flex-nowrap justify-between gap-y-8">
                <div class="w-full">
                    <p class="block">Type de plats dans la formule:</p>
                    <div class="flex gap-4 mt-4">
                        <div class="flex items-center">
                            {{ form_widget(form.starter) }}
                            {{ form_label(form.starter) }}
                        </div>
                        <div class="flex items-center">
                            {{ form_widget(form.main) }}
                            {{ form_label(form.main) }}
                        </div>
                        <div class="flex items-center">
                            {{ form_widget(form.dessert) }}
                            {{ form_label(form.dessert) }}
                        </div>
                    </div>
                </div>

                <div class="w-full sm:w-1/4 flex flex-col gap-2">
                    {{ form_label(form.price) }}
                    <div class="flex items-center">
                        {{ form_widget(form.price, {'attr': {'class': 'rounded border-slate-300 w-full'}}) }}
                    </div>
                </div>
            </div>

            <div class="flex justify-end">
                {{ form_errors(form.price) }}
            </div>
        </div>

        <div class="w-full flex flex-col gap-2">
            {{ form_label(form.menu) }}
            {{ form_widget(form.menu, {'attr': {'class': 'rounded border-slate-300'}}) }}
            {{ form_errors(form.menu) }}
        </div>

        <div class="flex justify-end">
            <button class="rounded px-4 py-2 bg-slate-200 hover:bg-slate-300">{{ button_label|default('Enregistrer') }}</button>
        </div>
    </div>
    {{ form_end(form) }}
</div>