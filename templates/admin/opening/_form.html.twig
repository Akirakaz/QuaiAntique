<div class="mx-auto w-full md:w-1/2">
    {{ form_start(form) }}

    <div class="flex flex-col gap-8">
        {% if form.day is defined %}
            {{ form_row(form.day, {'attr': {'class': 'w-full sm:w-1/2 rounded border-slate-300'}}) }}

            <fieldset class="rounded border border-slate-300 px-4 py-4">
                <legend>Midi</legend>
                <div class="mx-auto flex max-w-sm flex-wrap items-center justify-center gap-4 md:max-w-lg">
                    <div class="w-full lg:w-1/3">
                        {{ form_row(form.openMorning, {'attr': {'class':'flex items-center gap-1'}}) }}
                    </div>
                    <div class="w-full lg:w-1/3">
                        {{ form_row(form.closeMorning, {'attr': {'class':'flex items-center gap-1'}}) }}
                    </div>
                    <div class="w-full text-center">
                        {{ form_row(form.isMorningClosed) }}
                    </div>
                </div>
            </fieldset>

            <fieldset class="rounded border border-slate-300 px-4 py-4">
                <legend>Soir</legend>
                <div class="mx-auto flex max-w-sm flex-wrap items-center justify-center gap-4 md:max-w-lg">
                    <div class="w-full lg:w-1/3">
                        {{ form_row(form.openEvening, {'attr': {'class':'flex items-center gap-1'}}) }}
                    </div>
                    <div class="w-full lg:w-1/3">
                        {{ form_row(form.closeEvening, {'attr': {'class':'flex items-center gap-1'}}) }}
                    </div>
                    <div class="w-full text-center">
                        {{ form_row(form.isEveningClosed) }}
                    </div>
                </div>
            </fieldset>

            <div class="mt-8 flex justify-end gap-4">
                {% if form.saveAndAdd is defined %}
                    {{ form_row(form.saveAndAdd, {'attr': {'class': 'rounded px-4 py-2 bg-slate-200 hover:bg-slate-300'}}) }}
                {% endif %}

                <button class="rounded px-4 py-2 bg-slate-200 hover:bg-slate-300">{{ button_label|default('Enregistrer') }}</button>
            </div>
            {{ form_end(form) }}
        {% else %}
            <div class="rounded-lg border-2 border-red-300 bg-red-100 p-4 shadow">
                <p class="text-center">Vous avez déjà ajouté tous les jours de la semaine.</p>
            </div>
            {{ form_end(form, {render_rest: false}) }}
        {% endif %}
    </div>
</div>