{% extends 'base.html.twig' %}

{% block title %}Image index{% endblock %}

{% block body %}
    <h1>Image index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ImageSize</th>
                <th>ImageName</th>
                <th>Title</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for image in images %}
            <tr>
                <td>{{ image.id }}</td>
                <td>{{ image.imageSize }}</td>
                <td>{{ image.imageName }}</td>
                <td>{{ image.title }}</td>
                <td>{{ image.description }}</td>
                <td>
                    <a href="{{ path('app_image_show', {'id': image.id}) }}">show</a>
                    <a href="{{ path('app_image_edit', {'id': image.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="grid grid-cols-4">
        {# Exemple #}
        {% for image in images %}
            <div>
                <img class="w-full h-auto" src="{{ vich_uploader_asset(image) }}" alt="{{ image.title }}">
                <p>{{ image.description }}</p>
            </div>
        {% else %}
            No image found
        {% endfor %}
    </div>

    <a href="{{ path('app_image_new') }}">Create new</a>
{% endblock %}
