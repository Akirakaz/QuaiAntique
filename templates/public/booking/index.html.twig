<!DOCTYPE html>

<title>Booking index</title>

{% block body %}
    <h1>Booking index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Day</th>
            <th>Hours</th>
            <th>Guests</th>
            <th>Allergies</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for booking in bookings %}
            <tr>
                <td>{{ dump(booking) }}</td>
                
                <td>
                    <a href="{{ path('app_booking_show', {'id': booking.id}) }}">show</a>
                    <a href="{{ path('app_booking_edit', {'id': booking.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_booking_new') }}">Create new</a>
{% endblock %}
