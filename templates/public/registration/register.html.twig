{% extends 'public/base.html.twig' %}

{% block pageTitle %}Inscription{% endblock %}

{% block body %}
    <main class="flex-grow bg-cover bg-center bg-no-repeat inscription-bg">
        <section class="mx-auto flex h-full flex-row-reverse flex-col items-end justify-center p-8 max-w-8xl">
            <div class="w-full rounded-xl bg-white/60 p-4 shadow backdrop-blur-md md:w-1/2 xl:w-1/3">
                {{ form_start(registrationForm) }}
                <div class="flex flex-col pt-4">
                    {{ form_row(registrationForm.email, { 'attr': {'class': 'w-full bg-white/60 mt-1'}}) }}
                </div>
                <div class="flex gap-4 flex flex-wrap sm:flex-nowrap [&>*]:w-full mt-4">
                    <div class="w-1/2">
                        {{ form_row(registrationForm.bookingName, { 'attr': {'class': 'w-full bg-white/60 mt-1'}}) }}
                    </div>
                    <div class="w-1/2">
                        {{ form_row(registrationForm.phone, { 'attr': {'class': 'w-full bg-white/60 mt-1'}}) }}
                    </div>
                </div>
                <div class="flex flex-col pt-4">
                    {{ form_row(registrationForm.guests, { 'attr': {'class': 'w-full bg-white/60 mt-1'}}) }}
                </div>
                <div class="flex flex-col pt-4">
                    {{ form_row(registrationForm.allergies, { 'attr': {'class': 'w-full bg-white/60 mt-1'}}) }}
                </div>
                <div class="pt-4 gap-4 flex flex-wrap sm:flex-nowrap [&>*]:w-full">
                    {{ form_row(registrationForm.plainPassword) }}
                </div>
                <div class="flex justify-end pt-4">
                    <input type="submit" value="S'enregistrer" class="mt-8 mb-5 w-40 bg-white/60 p-2 text-lg font-semibold text-black hover:bg-white cursor-pointer">
                </div>
                {{ form_end(registrationForm) }}
            </div>
        </section>
    </main>
{% endblock %}
